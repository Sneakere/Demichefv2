---
import Layout from "../layouts/Layout.astro";
const base = import.meta.env.BASE_URL || "";
// import "/Demichefv2/global.css";
---

<Layout title="Contacto">
    <section
        class="h-screen flex flex-col bg-cover bg-no-repeat bg-center bg-blend-overlay bg-fixed bg-black/40"
        style={{ backgroundImage: `url(${base}background-horarios.jpg)` }}
    >
        <div
            class="flex flex-1 flex-col items-center justify-center gap-5 text-white"
        >
            <h1 class="text-white text-3xl tracking-widest">
                - HORARIO DE ATENCION -
            </h1>
            <div
                class="text-white text-center text-xl font-semibold tracking-widest"
            >
                <h3>LUNES A VIERNES</h3>
                <h3>De 09:00 a 20:00 hrs</h3>
            </div>
            <svg
                class="icon icon-tabler icon-tabler-separator"
                width="44"
                height="44"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="#ffffff"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M3 12l0 .01"></path>
                <path d="M7 12l10 0"></path>
                <path d="M21 12l0 .01"></path>
            </svg>
            <div
                class="text-white text-center text-xl font-semibold tracking-widest"
            >
                <h3>SABADO</h3>
                <h3>De 09:00 a 18:00 hrs</h3>
            </div>
            <svg
                class="icon icon-tabler icon-tabler-separator"
                width="44"
                height="44"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="#ffffff"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M3 12l0 .01"></path>
                <path d="M7 12l10 0"></path>
                <path d="M21 12l0 .01"></path>
            </svg>
            <div
                class="text-white text-center text-xl font-semibold tracking-widest"
            >
                <h3>DOMINGO</h3>
                <h3>CERRADO</h3>
            </div>
        </div>
    </section>
</Layout>
